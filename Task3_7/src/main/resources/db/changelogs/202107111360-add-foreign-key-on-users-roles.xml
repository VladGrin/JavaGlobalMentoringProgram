<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <changeSet id="202107111360" author="Volodymyr_Hrinchenko">

        <addForeignKeyConstraint referencedTableSchemaName="${schema.name}"
                                 baseTableSchemaName="${schema.name}"
                                 baseTableName="user_roles" baseColumnNames="user_id"
                                 constraintName="fk_user_roles_user_accounts"
                                 referencedTableName="user_accounts"
                                 referencedColumnNames="id"
                                 onDelete="CASCADE"
                                 onUpdate="RESTRICT"/>
        <addForeignKeyConstraint referencedTableSchemaName="${schema.name}"
                                 baseTableSchemaName="${schema.name}"
                                 baseTableName="user_roles" baseColumnNames="role_id"
                                 constraintName="fk_user_roles_roles"
                                 referencedTableName="roles"
                                 referencedColumnNames="id"
                                 onDelete="CASCADE"
                                 onUpdate="RESTRICT"/>

    </changeSet>
</databaseChangeLog>