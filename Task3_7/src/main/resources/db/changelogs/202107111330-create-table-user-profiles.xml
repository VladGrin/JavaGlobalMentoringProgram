<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="202107111330" author="Volodymyr_Hrinchenko">
        <createTable tableName="user_profiles" schemaName="${schema.name}">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="first_name" type="varchar(256)">
                <constraints nullable="false"/>
            </column>
            <column name="last_name" type="varchar(256)">
                <constraints nullable="false"/>
            </column>
            <column name="account_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addForeignKeyConstraint referencedTableSchemaName="${schema.name}"
                                 baseTableSchemaName="${schema.name}"
                                 baseTableName="user_profiles" baseColumnNames="account_id"
                                 constraintName="fk_user_profile_user_account"
                                 referencedTableName="user_accounts"
                                 referencedColumnNames="id"
                                 onDelete="RESTRICT"
                                 onUpdate="RESTRICT"/>
    </changeSet>
</databaseChangeLog>